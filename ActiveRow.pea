<script>
  import Row from "./Row"
  import { MATCH_STATE } from "./shared"

  export declare word
  declare state := "shaking"
  match := Array(5).fill(MATCH_STATE.EMPTY)

  case function onKeyDown
  when not { key: "Enter" }
    state.set! word.length < 5;
    setTimeout function
      state := null
    end, 200
  end
</script>

<~:window @keydown={onKeyDown} />
<Row {word} {match} {state} />
