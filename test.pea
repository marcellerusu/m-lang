class Main < Element =
  style _ is_on = "
    cursor: pointer;
    background: #{color is_on};
  "
  init_state = false
  color is_on =
    if is_on
      "#f00"
    else 
      "#fff"
    end
  text val = {
    [true]: "this is ON",
    [false]: "off like off"
  }[val]
  view _ is_on =
    <div onclick=#{set_state !is_on}>
      {text is_on}
    </div>
